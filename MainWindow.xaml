<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasySave - Job List" Height="500" MinHeight="400" Width="900" MinWidth="700" >
    <Grid Background="#FFD2D2D2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- MENU À GAUCHE -->
        <StackPanel Grid.Column="0" VerticalAlignment="Stretch" Background="#FFB5B5B5">
            <Image x:Name="Logo" Source="\Resources/Images/logo.png" Width="150" Height="50" IsEnabled="true" Margin="0,5" />
            <Button Content="Job list" Height="40" Margin="10,5" Background="Gainsboro"/>
            <Button Content="Running jobs" Height="40" Margin="10,5" Background="Gainsboro"/>
            <Button Content="Logs" Height="40" Margin="10,5" Background="Gainsboro"/>
            <Button Content="Configuration" Height="40" Margin="10,5" Background="Gainsboro"/>
        </StackPanel>

        <!-- CONTENU PRINCIPAL -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Zone ajout -->
                <RowDefinition Height="*"/>
                <!-- DataGrid -->
                <RowDefinition Height="Auto"/>
                <!-- Bouton Run -->
            </Grid.RowDefinitions>

            <!-- Bouton Add -->
            <Button Content="+ Add" Width="100" Height="30" HorizontalAlignment="Right" Margin="0,0,0,10" Grid.Row="0" Background="White"/>

            <!-- DataGrid Jobs -->
            <DataGrid Grid.Row="1" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False" Margin="0,0,0,10" IsSynchronizedWithCurrentItem="False">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Header="" Width="40"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="*"/>
                    <DataGridTextColumn Header="Destination" Width="*"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>

                    <!-- Colonne Actions -->
                    <DataGridTemplateColumn Header="Actions" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="✏" Width="25" Margin="2"/>
                                    <Button Content="🗑" Width="25" Margin="2"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Bouton RUN -->
            <Button Content="Run" Width="100" Height="30"
                    HorizontalAlignment="Right" Grid.Row="2" Background="White"/>
        </Grid>
    </Grid>
</Window>
