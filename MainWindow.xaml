<Window x:Class="EasySave.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasySave - Job List" Height="500" MinHeight="400" Width="900" MinWidth="700" >
    <Grid Background="#FFD2D2D2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- MENU À GAUCHE -->
        <StackPanel Grid.Column="0" VerticalAlignment="Stretch" Background="#FFB5B5B5">
            <Image x:Name="Logo" Source="\Resources/Images/logo.png" Width="150" Height="50" IsEnabled="true" Margin="0,5" />
            <Button Content="Job list" Height="40" Margin="10,5" Background="Gainsboro" Click="JobsList_Click"/>
            <Button Content="Running jobs" Height="40" Margin="10,5" Background="Gainsboro" Click="RunningJobs_Click"/>
            <Button Content="Logs" Height="40" Margin="10,5" Background="Gainsboro" Click="Logs_Click"/>
            <Button Content="Configuration" Height="40" Margin="10,5" Background="Gainsboro" Click="Configuration_Click"/>
        </StackPanel>

        <!-- Zone de contenu -->
        <Grid Grid.Column="1" Margin="10">
            <!-- CONTENU PRINCIPAL -->
            
            <ContentControl x:Name="MainContent"/>
        </Grid>

    </Grid>
</Window>
