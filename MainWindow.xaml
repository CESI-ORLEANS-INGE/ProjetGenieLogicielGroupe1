<Window x:Class="EasySave.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasySave - Job List" Height="500" MinHeight="400" Width="900" MinWidth="700" >
    <Grid Background="#FFD2D2D2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- MENU À GAUCHE -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>

            </Grid.RowDefinitions>

            <Image 
                x:Name="Logo" Source="pack://application:,,,/Resources/Images/logo.png" 
                Width="150" Height="50" IsEnabled="true" Margin="0,20,0,10" 
                Grid.Row="0"
                />
            <Button Content="Job list" Height="40" Margin="10,5" Background="Gainsboro" Click="JobsList_Click" Grid.Row="1"/>
            <Button Content="Running jobs" Height="40" Margin="10,5" Background="Gainsboro" Click="RunningJobs_Click" Grid.Row="2"/>
            <Button Content="Logs" Height="40" Margin="10,5" Background="Gainsboro" Click="Logs_Click" Grid.Row="4"/>
            <Button Content="Configuration" Height="40" Margin="10,5,10,10" Background="Gainsboro" Click="Configuration_Click" Grid.Row="5"/>
        </Grid>

        <!-- Zone de contenu -->
        <Grid Grid.Column="1" Margin="10">
            <!-- CONTENU PRINCIPAL -->
            
            <ContentControl x:Name="MainContent"/>
        </Grid>

    </Grid>
</Window>
