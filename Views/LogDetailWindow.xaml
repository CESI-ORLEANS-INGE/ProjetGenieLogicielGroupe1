<Window x:Class="EasySave.Views.LogDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Log Details" Height="400" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Date Time:"/>
            <TextBlock Text="{Binding Datetime}" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Name:" />
            <TextBlock Text="{Binding Name}" Margin="0,0,0,10"/>
            <TextBlock Text="Description:"/>
            <TextBlock Text="{Binding Description}" Margin="0,0,0,10"/>
            <TextBlock Text="Type:"/>
            <TextBlock Text="{Binding Type}" Margin="0,0,0,10"/>
            <TextBlock Text="Type Description:"/>
            <TextBlock Text="{Binding TypeDescription}" Margin="0,0,0,10"/>
            <TextBlock Text="File Size:"/>
            <TextBlock Text="{Binding Filesize}" Margin="0,0,0,10"/>
            <TextBlock Text="Transfer Duration:"/>
            <TextBlock Text="{Binding TransfertDuration}" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding Level}"/>
            <TextBlock Text="Level:"/>

            <Button Content="OK" HorizontalAlignment="Right" Width="70" Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>
