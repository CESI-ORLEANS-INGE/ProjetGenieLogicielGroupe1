<UserControl x:Class="EasySave.Views.Configuration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <!-- Allow the grid to adapt to available width -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Language -->
            <DockPanel Grid.Row="0" Margin="0,10,0,10">
                <TextBlock Text="Language:" Margin="0,0,10,0" DockPanel.Dock="Left" MinWidth="120" VerticalAlignment="Center"/>
                <ComboBox SelectedValue="{Binding BLanguage}" SelectedValuePath="Content" Width="100" HorizontalAlignment="Left">
                    <ComboBoxItem Content="FR"/>
                    <ComboBoxItem Content="EN"/>
                </ComboBox>
            </DockPanel>

            <!-- State File Path -->
            <DockPanel Grid.Row="1" Margin="0,10,0,10">
                <TextBlock Text="State File:" Margin="0,0,10,0" DockPanel.Dock="Left" MinWidth="120" VerticalAlignment="Center"/>
                <Button Content="Browse" DockPanel.Dock="Right" Padding="10,5" Margin="10,0,0,0" Click="StateFileClick"/>
                <TextBox Text="{Binding StateFile, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="30" VerticalContentAlignment="Center"/>
            </DockPanel>

            <!-- Log File Path -->
            <DockPanel Grid.Row="2" Margin="0,10,0,10">
                <TextBlock Text="Log File:" Margin="0,0,10,0" DockPanel.Dock="Left" MinWidth="120" VerticalAlignment="Center"/>
                <Button Content="Browse" DockPanel.Dock="Right" Padding="10,5" Margin="10,0,0,0" Click="LogFileClick"/>
                <TextBox Text="{Binding LogFile, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="30" VerticalContentAlignment="Center"/>
            </DockPanel>

            <!-- CryptoFile -->
            <DockPanel Grid.Row="3" Margin="0,10,0,10">
                <TextBlock Text="Crypto File:" Margin="0,0,10,0" DockPanel.Dock="Left" MinWidth="120" VerticalAlignment="Center"/>
                <Button Content="Browse" DockPanel.Dock="Right" Padding="10,5" Margin="10,0,0,0" Click="CryptoFileClick"/>
                <TextBox Text="{Binding CryptoFile, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="30" VerticalContentAlignment="Center"/>
            </DockPanel>

            <!-- Encryption key -->
            <DockPanel Grid.Row="4" Margin="0,10,0,10">
                <TextBlock Text="Encryption key:" Margin="0,0,10,0" DockPanel.Dock="Left" MinWidth="120" VerticalAlignment="Center"/>
                <TextBox Text="{Binding EncryptionKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="30" VerticalContentAlignment="Center"/>
            </DockPanel>

            <!-- Extensions to Encrypt -->
            <DockPanel Grid.Row="5" Margin="0,10,0,10">
                <TextBlock Text="Extensions to encrypt:" Margin="0,0,10,0" DockPanel.Dock="Left" MinWidth="120" VerticalAlignment="Center"/>
                <TextBox Text="{Binding ExtensionsToEncrypt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="30" VerticalContentAlignment="Center"/>
            </DockPanel>

            <!-- Processes -->
            <DockPanel Grid.Row="6" Margin="0,10,0,10">
                <TextBlock Text="Processes:" Margin="0,0,10,0" DockPanel.Dock="Left" MinWidth="120" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Processes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="30" VerticalContentAlignment="Center"/>
            </DockPanel>

            <!-- Save Button - Optional addition for better UX -->
            <!-- <Button Content="Save Configuration" Grid.Row="7" Margin="0,20,0,0" Padding="15,8" HorizontalAlignment="Right"/> -->
        </Grid>
    </ScrollViewer>
</UserControl>