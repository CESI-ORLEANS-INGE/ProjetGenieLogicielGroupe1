<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="EasySave.Views.JobsList"
             Height="Auto" Width="auto" av:DesignHeight="246.749">
    <!-- CONTENU PRINCIPAL -->
    <Grid Grid.Column="1" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Zone ajout -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Bouton Run -->
        </Grid.RowDefinitions>
        <!-- Bouton Add -->
        <Button Content="+ Add" Width="100" Height="30" HorizontalAlignment="Right" Margin="0,0,0,10" Grid.Row="0" Background="White" Click="AddJob"/>
        <!-- DataGrid Jobs -->
        <DataGrid x:Name="jobsDataGrid" Grid.Row="1" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False" Margin="0,0,0,10" IsSynchronizedWithCurrentItem="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="" Width="40"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Source" Binding="{Binding SourcePath}" Width="*"/>
                <DataGridTextColumn Header="Destination" Width="*" Binding="{Binding DestinationPath}"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
                <!-- Colonne Actions -->
                <DataGridTemplateColumn Header="Actions" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="✏" Width="25" Margin="2" Click="EditJob_Click" />
                                <Button Content="🗑" Width="25" Margin="2" Click="DeleteJob_Click" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <!-- Bouton RUN -->
        <Button Content="Run" Width="100" Height="30"
            HorizontalAlignment="Right" Grid.Row="2" Background="White" Click="RunSelectedJobs_Click"/>
    </Grid>
</UserControl>