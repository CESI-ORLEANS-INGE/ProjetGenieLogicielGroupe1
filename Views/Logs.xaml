<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="EasySave.Views.Logs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="av"
        xmlns:logger="clr-namespace:EasySave.Logger;assembly=Logger"
        xmlns:views="clr-namespace:EasySave.Views"
        av:DataContext="{av:DesignInstance Type=views:Logs}"
>
    <Grid Margin="10" x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding PagedLogCollection}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  MouseDoubleClick="DataGrid_MouseDoubleClick"
                  Margin="0"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Grid.Row="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Datetime}" Width="*" />
                <DataGridTextColumn Header="Name" Binding="{Binding JobName}" Width="*" />
                <DataGridTextColumn Header="Destination" Binding="{Binding Destination}" Width="*" />
                <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="*" />
                <DataGridTextColumn Header="TaskType" Binding="{Binding TaskType}" Width="*" />
                <DataGridTextColumn Header="File Size" Binding="{Binding Filesize}" Width="*" />
                <DataGridTextColumn Header="Duration" Binding="{Binding TransfertDuration}" Width="*" />
                <DataGridTextColumn Header="Log Level" Binding="{Binding Level}" Width="*" />
                <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <!-- Paging controls -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="1">
            <Button Content="Previous" Click="PreviousPage_Click" Margin="5,0" Width="75"
                    IsEnabled="{Binding IsPreviousEnabled}" />
            <TextBlock Text="{Binding PageIndicator}" VerticalAlignment="Center" Margin="10,0"/>
            <Button Content="Next" Click="NextPage_Click" Margin="5,0" Width="75"
                    IsEnabled="{Binding IsNextEnabled}" />
        </StackPanel>
    </Grid>
</UserControl>
