<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="EasySave.Views.Logs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logs" Height="600" Width="800">
    <Grid Margin ="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="127*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="263*"/>
        </Grid.ColumnDefinitions>

        <DataGrid ItemsSource="{Binding Logs}" AutoGenerateColumns="False" IsReadOnly="True" MouseDoubleClick="DataGrid_MouseDoubleClick" Grid.ColumnSpan="3" Margin="10,-10,-10,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Datetime}" Width="*" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="Destination" Binding="{Binding Destination}" Width="*" />
                <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="*" />
                <DataGridTextColumn Header="TaskType" Binding="{Binding TaskType}" Width="*" />
                <DataGridTextColumn Header="File Size" Binding="{Binding Filesize}" Width="*" />
                <DataGridTextColumn Header="Duration" Binding="{Binding TransfertDuration}" Width="*" />
                <DataGridTextColumn Header="Log Level" Binding="{Binding LogLevel}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <!-- Quit Button -->
        <Button Content="Quit" Width="100" Height="30" HorizontalAlignment="Right" Click="QuitButton_Click" Margin="0,488,10,46" Grid.Column="2"/>
    </Grid>
</Window>