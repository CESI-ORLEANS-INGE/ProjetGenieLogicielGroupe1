<Window x:Class="EasySave.Views.JobEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="{Binding Job}" Height="200" Width="330"
      ResizeMode="CanResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="9.721"/>
            <RowDefinition Height="20.239"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Job Name -->
        <Label Content="Job1" Grid.Row="0" Grid.ColumnSpan="2" FontWeight="Bold" FontSize="14" Margin="0 0 0 10"/>

        <!-- Source -->
        <Image x:Name="folder" Source="/Resources/Images/dossier.png" Width="20" Height="20" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <StackPanel Name="SourceTextBox" Orientation="Horizontal" Grid.Row="1" Grid.Column="1" Margin="5,2,5,2">
            <TextBox Name="PathSource" Width="200" Margin="0 0 5 0"/>
            <Button Content="Browse" Width="60" Click="BrowseSource_Click"/>
        </StackPanel>

        <!-- Destination -->
        <Image x:Name="folder1" Source="/Resources/Images/dossier.png" Width="20" Height="20" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" ScrollViewer.HorizontalScrollBarVisibility="Visible"/>
        <StackPanel Name="DestinationTextbox" Orientation="Horizontal" Grid.Row="2" Grid.Column="1" Margin="5,2,5,2">
            <TextBox Name="PathDestination" Width="200" Margin="0 0 5 0"/>
            <Button Content="Browse" Width="60" Click="BrowseDestination_Click"/>
        </StackPanel>

        <!-- Mode (Sequential/Other) -->
        <Image Source="/Resources/Images/scanner.png" Width="20" Height="20" Grid.Row="3" Grid.Column="0" VerticalAlignment="Top" Margin="0,3,0,0"/>
        <ComboBox Grid.Row="3" Grid.Column="1" Margin="2,2,2,2" Width="265" HorizontalAlignment="Left">
            <ComboBoxItem Content="Sequential" IsSelected="True"/>
            <ComboBoxItem Content="Differential"/>
        </ComboBox>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0" Grid.Column="1">
            <Button Content="Remove" Width="75" Margin="5 0" Click="DeleteJob"/>
            <Button Content="Cancel" Width="75" Margin="5 0" Click="Cancel_Click"/>
            <Button Content="Save" Width="75" Margin="5 0"/>
        </StackPanel>
    </Grid>
</Window>
