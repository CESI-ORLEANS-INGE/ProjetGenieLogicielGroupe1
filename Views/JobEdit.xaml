<Window x:Class="EasySave.JobEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="{Binding Job}" Height="300" Width="400"
      ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
  <Grid Margin="10">
      <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <!-- Job Name -->
      <Label Content="Job1" Grid.Row="0" Grid.ColumnSpan="2" FontWeight="Bold" FontSize="14" Margin="0 0 0 10"/>

      <!-- Source -->
      <Image Source="/Icons/folder.png" Width="20" Height="20" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
      <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" Margin="5 2">
          <TextBox Width="200" Margin="0 0 5 0"/>
          <Button Content="Browse" Width="60"/>
      </StackPanel>

      <!-- Destination -->
      <Image Source="/Icons/folder.png" Width="20" Height="20" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
      <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" Margin="5 2">
          <TextBox Width="200" Margin="0 0 5 0"/>
          <Button Content="Browse" Width="60"/>
      </StackPanel>

      <!-- Mode (Sequential/Other) -->
      <Image Source="/Icons/sequential.png" Width="20" Height="20" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
      <ComboBox Grid.Row="3" Grid.Column="1" Margin="5 2" Width="265">
          <ComboBoxItem Content="Sequential" IsSelected="True"/>
          <ComboBoxItem Content="Differential"/>
      </ComboBox>

      <!-- Bottom Buttons -->
      <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
          <Button Content="Remove" Width="75" Margin="5 0"/>
          <Button Content="Cancel" Width="75" Margin="5 0"/>
          <Button Content="Save" Width="75" Margin="5 0"/>
      </StackPanel>
  </Grid>
</Window>
