<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:easysave="clr-namespace:EasySave"
    xmlns:converters="clr-namespace:EasySave.Converters"
    xmlns:views="clr-namespace:EasySave.Views"
    mc:Ignorable="av" 
    x:Class="EasySave.Views.RunningJobs"
    Height="Auto" 
    Width="Auto" 
    av:DesignHeight="496.81" 
    av:DesignWidth="684"
    av:DataContext="{av:DesignInstance Type=views:RunningJobs}"
>
    <Control.Resources>
        <converters:DateTimeToStringConverter x:Key="DtToStrConverter"/>
        <converters:EntryHandlerToStringConverter x:Key="EntryToStrConverter"/>
    </Control.Resources>

    <!-- CONTENU PRINCIPAL -->
    <Grid Margin="10" x:Name="MainGrid">
        <Grid.RowDefinitions>
            <!-- Jobs List -->
            <RowDefinition Height="*"/>
            <!-- Footer -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" Padding="0,0,10,0" Margin="0,0,0,10" VerticalScrollBarVisibility="Visible">
            <ItemsControl x:Name="RunningJobsList" ItemsSource="{Binding RunningJobList}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <GroupBox Header="{Binding BackupJob.Name}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Label Content="{Binding BackupJob.Source}" Grid.Column="0"/>
                                        <Image Source="pack://application:,,,/Resources/Images/arrow-right.png" Grid.Column="1" Width="24" Height="24"/>
                                        <Label Content="{Binding BackupJob.Destination}" Grid.Column="2"/>
                                    </Grid>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Label Content="{Binding BackupJob.CurrentTask.Source, Converter={StaticResource EntryToStrConverter}}" Grid.Column="0"/>
                                        <Image 
                                        Grid.Column="1" Width="24" Height="24"
                                    >
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Setter Property="Source" Value="pack://application:,,,/Resources/Images/arrow-right.png"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding BackupJob.CurrentTask.IsRemoveTask}" Value="True">
                                                            <Setter Property="Source" Value="pack://application:,,,/Resources/Images/trash.png"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                        <Label Content="{Binding BackupJob.CurrentTask.Destination, Converter={StaticResource EntryToStrConverter}}" Grid.Column="2"/>
                                    </Grid>

                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Label Content="{Binding DataContext.ViewModel.Language.Translations[VIEW_RUNNING_STARTED_AT], ElementName=MainGrid}" Grid.Column="0"/>
                                        <Label Content="{Binding BackupJob.StartedAt, Converter={StaticResource DtToStrConverter}}" Grid.Column="1"/>
                                    </Grid>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <ProgressBar Value="{Binding Progression, Mode=OneWay}" Height="24" Foreground="LightGray" Grid.Row="0"/>

                                    <Button Content="{Binding DataContext.ViewModel.Language.Translations[VIEW_RUNNING_PAUSE], ElementName=MainGrid}"  Width="100" Height="30" Grid.Column="2" Visibility="Hidden"/>
                                    <Button Content="{Binding DataContext.ViewModel.Language.Translations[VIEW_RUNNING_CANCEL], ElementName=MainGrid}"  Width="100" Height="30" Grid.Column="4" Click="CancelButton_Click" DataContext="{Binding Path=.}"/>
                                </Grid>
                            </Grid>
                        </GroupBox>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" Grid.Column="0" Margin="0,0,10,0">
                <StackPanel Orientation="Horizontal">
                    <Label Content="{Binding ViewModel.Language.Translations[VIEW_RUNNING_STARTED_AT]}"/>
                    <Label Content="{Binding StartedAt, Converter={StaticResource DtToStrConverter}}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="{Binding ViewModel.Language.Translations[VIEW_RUNNING_FILE_COPY]}"/>
                    <Label Content="{Binding TotalFilesLeft}"/>
                    <Label Content="/"/>
                    <Label Content="{Binding TotalFilesToCopy}"/>
                </StackPanel>
                <ProgressBar Value="{Binding Progression, Mode=OneWay}" Height="24" Foreground="LightGray"/>
            </StackPanel>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button x:Name="PauseAllButton" Content="{Binding ViewModel.Language.Translations[VIEW_RUNNING_PAUSE_ALL]}"  Width="100" Height="30" Grid.Row="0" Visibility="Hidden"/>
                <Button x:Name="ResumeAllButton" Content="{Binding ViewModel.Language.Translations[VIEW_RUNNING_RESUME_ALL]}"  Width="100" Height="30" Grid.Row="0" Visibility="Hidden"/>
                <Button x:Name="RunAllButton" Content="Run All"  Width="100" Height="30" Grid.Row="0" Click="RunAllButton_Click"/>
                <Button x:Name="CancelAllButton" Content="{Binding ViewModel.Language.Translations[VIEW_RUNNING_CANCEL_ALL]}"  Width="100" Height="30" Grid.Row="2" Click="CancelAllButton_Click"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>