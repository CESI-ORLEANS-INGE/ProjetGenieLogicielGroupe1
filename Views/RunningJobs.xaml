﻿<UserControl x:Class="EasySave.Views.Logs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:easysave="clr-namespace:EasySave" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" d:DataContext="{d:DesignInstance Type=easysave:ViewModel}"
              Height="Auto" Width="Auto">

    <!-- CONTENU PRINCIPAL -->
    <Grid Grid.Column="1" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Zone ajout -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Bouton Run -->
        </Grid.RowDefinitions>

        <!-- Bouton Add -->
        <Button Content="+ Add" Width="100" Height="30" HorizontalAlignment="Right" Margin="0,0,0,10" Grid.Row="0" Background="White"/>

        <!-- DataGrid Jobs -->
        <DataGrid Grid.Row="1" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False" Margin="0,0,0,10" IsSynchronizedWithCurrentItem="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="" Width="40"/>
                <DataGridTextColumn Header="Conf a" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="56" Binding="{Binding Source}" Width="*"/>
                <DataGridTextColumn Header="dddd" Width="*"/>
                <DataGridTextColumn Header="j" Binding="{Binding Type}" Width="*"/>

                <!-- Colonne Actions -->
                <DataGridTemplateColumn Header="Actions" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="✏" Width="25" Margin="2"/>
                                <Button Content="🗑" Width="25" Margin="2"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Bouton RUN -->
        <Button Content="Run" Width="100" Height="30"
            HorizontalAlignment="Right" Grid.Row="2" Background="White"/>
    </Grid>
</UserControl>
