<Window x:Class="EasySave.Views.ConfirmDeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmation" Height="150" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Etes-vous sur de vouloir supprimer ce job ?" 
                       TextWrapping="Wrap" FontSize="14" Margin="0 0 0 10" 
                       HorizontalAlignment="Center" TextAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                <Button Content="Oui" Width="75" Margin="5,0" Click="Yes_Click"/>
                <Button Content="Non" Width="75" Margin="5,0" Click="No_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>