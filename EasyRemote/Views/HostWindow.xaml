<Window x:Class="EasyRemote.Views.HostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="EasyRemote - Host" Height="189" Width="460"
        WindowStartupLocation="CenterScreen">

	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="14"/>
			<RowDefinition Height="Auto" MinHeight="55.96"/>
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>


		<TextBlock Text="🔌" FontSize="24" VerticalAlignment="Center" Grid.Column="0" Margin="0,0,10,0" Height="32"/>

		<!-- TextBox Host:Port -->
		<TextBox x:Name="HostPortTextBox"
             Text="{Binding HostPort, UpdateSourceTrigger=PropertyChanged}"
             FontSize="14"
             VerticalAlignment="Center"
             Height="30" Grid.ColumnSpan="2" Margin="0,0,298,0"/>

		<TextBlock Text="Host:Port"
               FontSize="14"
               Foreground="Gray"
               Margin="5,0,260,0"
               VerticalAlignment="Center"
               IsHitTestVisible="False"
               Visibility="visible" Grid.ColumnSpan="2" Height="18"/>

		<!-- Ligne décorative -->
		<Rectangle Grid.Row="1" Grid.ColumnSpan="2"
                   Height="1"
                   Fill="Gray"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,5"/>

		<!-- Boutons -->
		<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0" Grid.Column="1" Width="170">
			<Button Content="Exit" Width="80" Margin="0,0,10,0" Click="ExitButton_Click"/>
			<Button Content="Continue" Width="80" Click="ContinueButton_Click"/>
		</StackPanel>
	</Grid>
</Window>